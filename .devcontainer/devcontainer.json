{
    "name": "Python with Mamba",
    "build": { 
        "dockerfile": "Dockerfile" 
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance"
            ]
        }
    },
    "postCreateCommand": "micromamba install -y -n base -f environment.yml && micromamba clean -a -y",
    "remoteUser": "vscode"
}